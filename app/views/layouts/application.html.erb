<!DOCTYPE html>
<html>
  <head>
    <title>ifeedback</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body class="bg-gray-100">
    <nav class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <%= link_to 'ifeedback', root_path, class: 'flex-shrink-0 flex items-center text-lg font-bold text-indigo-600' %>
          </div>
          <div class="flex items-center">
            <% if user_signed_in? %>
              <%= link_to 'Dashboard', dashboard_path, class: 'text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium' %>
              <%= link_to 'Boards', boards_path, class: 'text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium' %>
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium' %>

              
            <% else %>
              <%= link_to 'Sign in', new_user_session_path, class: 'text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium' %>
              <%= link_to 'Sign up', new_user_registration_path, class: 'text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium' %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
      <%= yield %>
    </main>
  </body>
</html>